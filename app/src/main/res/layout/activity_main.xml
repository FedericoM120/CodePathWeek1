<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="When was the French Revolution?"
        android:textAlignment="center"
        android:textSize="38sp"
        android:textColor="@color/white"
        android:background="@drawable/card_background"
        android:elevation="5dp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/answer_card_background"
        android:gravity="center"
        android:text="May 5, 1789"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/choiceOne"
        android:gravity="center"
        android:layout_width="390dp"
        android:layout_height="83dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="328dp"
        android:background="#002654"
        android:text="August 20, 1791"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/choiceTwo"
        android:gravity="center"
        android:layout_width="390dp"
        android:layout_height="63dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="249dp"
        android:text="September 4, 1796"
        android:textAlignment="center"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/choiceThree"
        android:gravity="center"
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="504dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="149dp"
        android:background="#ED2939"
        android:text="May 5, 1789"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp" />

    <ImageView
        android:id="@+id/answers_showing"
        android:layout_width="71dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="170dp"
        android:layout_marginEnd="169dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/eye_open" />

    <ImageView
        android:id="@+id/answers_notShowing"
        android:layout_width="71dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="170dp"
        android:layout_marginEnd="169dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/eye_closed"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/add_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/icon_add" />

    <ImageView
        android:id="@+id/edit_question_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/edit_button" />



</RelativeLayout>